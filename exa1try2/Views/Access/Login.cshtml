@model exa1try2.Models.VMLogin;

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1 class="text-center">Login</h1>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Access" asp-action="Login" method="post">
                            <div class="form-group">
                                <label>Email:</label>
                                <input type="email" class="form-control" placeholder="Enter your email" asp-for="Email" required />
                            </div>
                            <div class="form-group">
                                <label>Password:</label>
                                <input type="password" class="form-control" placeholder="Enter your password" asp-for="PassWord" required />
                            </div>
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" asp-for="KeepLoggedIn" />
                                <label class="form-check-label">Keep me logged in</label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Login</button>

                            @if (ViewData["ValidateMessage"] != null)
                            {
                                <div class="alert alert-danger mt-3" role="alert">
                                    @ViewData["ValidateMessage"]
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
