@model IEnumerable<exa1try2.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Categories</h1>

        <div class="row mb-3">
            <div class="col-md-6 offset-md-6">
                <form asp-controller="Categories" asp-action="Index" method="get" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="stringBusqueda" class="form-control mr-2" placeholder="Search by name">
                    </div>
                    <button type="submit" class="btn btn-dark mr-2">Search</button>
                    <div class="text-center">
                        <a asp-action="Create" class="btn btn-success">Create New</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Category Name</th>
                        <th>Description</th>
                        <th>Picture</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Picture)</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.CategoryId })" class="btn btn-primary btn-sm">Edit</a>
                                <a href="@Url.Action("Details", new { id = item.CategoryId })" class="btn btn-info btn-sm">Details</a>
                                <a href="@Url.Action("Delete", new { id = item.CategoryId })" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
